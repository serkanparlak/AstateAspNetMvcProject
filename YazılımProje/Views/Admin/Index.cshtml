@{
    ViewBag.Title = "Yönetim";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="row bg-title">
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        <h4 class="page-title">Yönetim Anasayfa</h4>
    </div>
    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
        <ol class="breadcrumb">
            <li class="active">Admin</li>
        </ol>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row" style="padding-left: 100px; margin-bottom: 50px; padding-top:30px">
    <div class="col-lg-3 col-xs-6 col-lg-offset-1">
        <!-- small box -->
        <div>
            <div class="inner">
                <h3>@ViewBag.TotolUser</h3>
                <p>Kullanıcı</p>
            </div>

            <a href="/Admin/Users/">Daha fazla <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div>
            <div class="inner">
                <h3>@ViewBag.TotolIlanTuru</h3>
                <p>İlan Türü</p>
            </div>
            
            <a href="/Admin/IlanTurleri/">Daha fazla <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="bg-yellow">
            <div class="inner">
                <h3>@ViewBag.TotalMesaj</h3>

                <p>Mesaj</p>
            </div>
            
            <a href="/Admin/Mesajlar/">Daha fazla <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
</div>


